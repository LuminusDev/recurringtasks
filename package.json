{
  "name": "recurringtasks",
  "displayName": "RecurringTasks",
  "description": "Manage and see recurring tasks to remind you",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Recurring Tasks",
      "properties": {
        "recurringTasks.preferredCalendar": {
          "type": "string",
          "enum": [
            "Outlook Web",
            "Google Calendar",
            "Ask each time"
          ],
          "default": "Ask each time",
          "description": "Preferred calendar provider for creating meetings from tasks"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "recurring-tasks",
          "title": "Recurring Tasks",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "recurring-tasks": [
        {
          "id": "recurringTasks.view",
          "name": "Tasks",
          "icon": "$(tasklist)",
          "contextualTitle": "Recurring Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "recurringtasks.addTask",
        "title": "Recurring Tasks: Add Task",
        "icon": "$(add)"
      },
      {
        "command": "recurringtasks.validateTask",
        "title": "Recurring Tasks: Validate Task",
        "icon": "$(check)"
      },
      {
        "command": "recurringtasks.archiveTask",
        "title": "Recurring Tasks: Archive Task",
        "icon": "$(archive)"
      },
      {
        "command": "recurringtasks.unarchiveTask",
        "title": "Recurring Tasks: Unarchive Task",
        "icon": "$(debug-step-back)"
      },
      {
        "command": "recurringtasks.deleteTask",
        "title": "Recurring Tasks: Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "recurringtasks.refreshTasks",
        "title": "Recurring Tasks: Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "recurringtasks.showTaskDetails",
        "title": "Recurring Tasks: Show Task Details"
      },
      {
        "command": "recurringtasks.createOutlookMeeting",
        "title": "Recurring Tasks: Create Calendar Meeting",
        "icon": "$(calendar)"
      },
      {
        "command": "recurringtasks.setPreferredCalendar",
        "title": "Recurring Tasks: Set Preferred Calendar",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "recurringtasks.addTask",
          "when": "view == recurringTasks.view",
          "group": "navigation"
        },
        {
          "command": "recurringtasks.refreshTasks",
          "when": "view == recurringTasks.view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "recurringtasks.deleteTask",
          "when": "view == recurringTasks.view && viewItem == 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.validateTask",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.archiveTask",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.unarchiveTask",
          "when": "view == recurringTasks.view && viewItem == 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.createOutlookMeeting",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "recurringtasks.createOutlookMeeting",
        "key": "ctrl+shift+m",
        "when": "activeWebviewPanelId == 'recurringTasks.taskDetails'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
