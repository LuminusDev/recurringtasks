{
  "name": "recurringtasks",
  "displayName": "RecurringTasks",
  "description": "Manage and see recurring tasks to remind you",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Recurring Tasks",
      "properties": {
        "recurringTasks.preferredCalendar": {
          "type": "string",
          "enum": [
            "Outlook Web",
            "Google Calendar",
            "Ask each time"
          ],
          "default": "Ask each time",
          "description": "Preferred calendar provider for creating meetings from tasks"
        },
        "recurringTasks.jira.baseUrl": {
          "type": "string",
          "default": "",
          "description": "JIRA instance base URL (e.g., https://yourcompany.atlassian.net)",
          "format": "uri"
        },
        "recurringTasks.jira.email": {
          "type": "string",
          "default": "",
          "description": "Your JIRA account email address"
        },
        "recurringTasks.jira.apiToken": {
          "type": "string",
          "default": "",
          "description": "JIRA API token (create one at https://id.atlassian.com/manage-profile/security/api-tokens)"
        },
        "recurringTasks.jira.defaultProjectKey": {
          "type": "string",
          "default": "",
          "description": "Default JIRA project key for creating issues"
        },
        "recurringTasks.jira.defaultIssueType": {
          "type": "string",
          "default": "Task",
          "description": "Default JIRA issue type for creating issues"
        },
        "recurringTasks.jira.autoAssignToMe": {
          "type": "boolean",
          "default": true,
          "description": "Automatically assign created JIRA issues to yourself"
        },
        "recurringTasks.jira.maxProjectsToFetch": {
          "type": "number",
          "default": 1000,
          "minimum": 1,
          "maximum": 10000,
          "description": "Maximum number of projects to fetch from JIRA (for large instances)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "recurring-tasks",
          "title": "Recurring Tasks",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "recurring-tasks": [
        {
          "id": "recurringTasks.view",
          "name": "Tasks",
          "icon": "$(tasklist)",
          "contextualTitle": "Recurring Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "recurringtasks.addTask",
        "title": "Recurring Tasks: Add Task",
        "icon": "$(add)"
      },
      {
        "command": "recurringtasks.validateTask",
        "title": "Validate Task",
        "icon": "$(check)"
      },
      {
        "command": "recurringtasks.archiveTask",
        "title": "Archive Task",
        "icon": "$(archive)"
      },
      {
        "command": "recurringtasks.unarchiveTask",
        "title": "Unarchive Task",
        "icon": "$(debug-step-back)"
      },
      {
        "command": "recurringtasks.deleteTask",
        "title": "Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "recurringtasks.refreshTasks",
        "title": "Recurring Tasks: Refresh Tasks",
        "icon": "$(refresh)"
      },
      {
        "command": "recurringtasks.showTaskDetails",
        "title": "Show Task Details"
      },
      {
        "command": "recurringtasks.createOutlookMeeting",
        "title": "Create Calendar Meeting",
        "icon": "$(calendar)"
      },
      {
        "command": "recurringtasks.setPreferredCalendar",
        "title": "Recurring Tasks: Set Preferred Calendar",
        "icon": "$(gear)"
      },
      {
        "command": "recurringtasks.createJiraIssue",
        "title": "Create JIRA Issue",
        "icon": "$(bug)"
      },
      {
        "command": "recurringtasks.configureJira",
        "title": "Recurring Tasks: Configure JIRA",
        "icon": "$(settings-gear)"
      },
      {
        "command": "recurringtasks.testJiraConnection",
        "title": "Recurring Tasks: Test JIRA Connection",
        "icon": "$(plug)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "recurringtasks.addTask",
          "when": "view == recurringTasks.view",
          "group": "navigation"
        },
        {
          "command": "recurringtasks.refreshTasks",
          "when": "view == recurringTasks.view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "recurringtasks.deleteTask",
          "when": "view == recurringTasks.view && viewItem == 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.validateTask",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.archiveTask",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.unarchiveTask",
          "when": "view == recurringTasks.view && viewItem == 'archived' && viewItem != 'category'",
          "group": "inline"
        },
        {
          "command": "recurringtasks.createOutlookMeeting",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "1_modify"
        },
        {
          "command": "recurringtasks.createJiraIssue",
          "when": "view == recurringTasks.view && viewItem != 'archived' && viewItem != 'category'",
          "group": "1_modify"
        }
      ],
      "commandPalette": [
        {
          "command": "recurringtasks.validateTask",
          "when": "false"
        },
        {
          "command": "recurringtasks.archiveTask",
          "when": "false"
        },
        {
          "command": "recurringtasks.unarchiveTask",
          "when": "false"
        },
        {
          "command": "recurringtasks.deleteTask",
          "when": "false"
        },
        {
          "command": "recurringtasks.showTaskDetails",
          "when": "false"
        },
        {
          "command": "recurringtasks.createOutlookMeeting",
          "when": "false"
        },
        {
          "command": "recurringtasks.createJiraIssue",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "recurringtasks.createOutlookMeeting",
        "key": "ctrl+shift+m",
        "when": "activeWebviewPanelId == 'recurringTasks.taskDetails'"
      },
      {
        "command": "recurringtasks.createJiraIssue",
        "key": "ctrl+shift+j",
        "when": "activeWebviewPanelId == 'recurringTasks.taskDetails'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
